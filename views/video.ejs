<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <title>FreeDrive | Fichier</title>
    <link rel="shortcut icon" href="https://cdn-icons-png.flaticon.com/512/906/906329.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/panel.css">
    <link rel="stylesheet" href="/css/video.css">
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <script type="text/javascript" src="//cdn.jsdelivr.net/afterglow/latest/afterglow.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <div class="sidebar">
        <div class="logo-details">
            <img src="https://cdn-icons-png.flaticon.com/512/906/906329.png" alt="logo" width="36" class="icon">
            <div class="logo_name">FreeDrive</div>
            <i class='bx bx-menu' id="btn"></i>
        </div>
        <ul class="nav-list">
            <li>
                <div id="searchFrom">
                    <i class='bx bx-search'></i>
                    <input id="searchText" type="search" placeholder="Fichier (img.png)">
                    <input type="submit" style="display: none" />
                    <span class="tooltip">Rechercher un fichier</span>
                </div>

            </li>
            <li>
                <a href="/fichier">
                    <i class='bx bx-folder'></i>
                    <span class="links_name">Fichier</span>
                </a>
                <span class="tooltip">Fichier</span>
            </li>
            <li>
                <a href="/upload">
                    <i class='bx bx-cloud-upload'></i>
                    <span class="links_name">Upload</span>
                </a>
                <span class="tooltip">Upload</span>
            </li>
            <li>
                <a href="/setting">
                    <i class='bx bx-cog'></i>
                    <span class="links_name">Setting</span>
                </a>
                <span class="tooltip">Setting</span>
            </li>
            <!-- <li>
                 <a href="#">
                     <i class='bx bx-user'></i>
                     <span class="links_name">User</span>
                 </a>
                 <span class="tooltip">User</span>
             </li> -->
            <li class="profile">
                <div class="profile-details">
                    <img src="<%= p %>"
                        alt="profileImg" id="profilimg">
                    <div class="name_job">
                        <div class="name">
                            <%= u %>
                        </div>
                        <div class="job">
                            <%= j %>
                        </div>
                    </div>
                </div><i class='bx bx-log-out' onclick="deco()" id="log_out"></i>
            </li>
        </ul>
    </div>
    <section class="home-section">
        <center>
            <h1>Fichier</h1>
            <div id="info">
                <span id="txt">
                    <%= a %>
                </span>
                <a id="btnn"
                    onclick="var element = document.createElement('a');element.setAttribute('href', '<%= b %>');element.setAttribute('download', '<%= n %>');element.style.display = 'none';document.body.appendChild(element);element.click();document.body.removeChild(element);">
                    <i class="fa fa-cloud-download"></i></a>
                <video class="afterglow" id="text">
                    <source type="video/mp4" src="<%= b %>" />
                </video>
                <a href="/delete/<%= u %>/<%= n %>"> <input type="button" id="btnnn" value="Supprimer"> </a>

            </div>
        </center>
    </section>
    <script src="/js/menu.js"></script>

</body>

</html>